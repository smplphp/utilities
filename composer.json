{
  "name": "smplphp/utilities",
  "description": "A simple modern PHP utilities library",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Ollie Read",
      "email": "smpl@ollie.codes"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "sempro/phpunit-pretty-print": "^1.4",
    "vimeo/psalm": "^4.21",
    "phpstan/phpstan": "^1.4",
    "infection/infection": "^0.26.9",
    "smplphp/composer-local-package-repository": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "Smpl\\Utils\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Smpl\\Utils\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true,
      "smplphp/composer-local-package-repository": true
    }
  }
}
